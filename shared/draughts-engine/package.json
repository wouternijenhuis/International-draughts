{
  "name": "@international-draughts/engine",
  "version": "0.1.0",
  "description": "International draughts game engine - shared library for browser and server",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist",
    "lint": "eslint src/ tests/",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.0",
    "eslint": "^9.39.0",
    "rimraf": "^6.1.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^3.2.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "sideEffects": false,
  "license": "MIT"
}
