{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: ASP.NET Core",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Cleanup dev ports",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/backend/src/InternationalDraughts.Api/InternationalDraughts.Api.csproj"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "justMyCode": true
    },
    {
      "name": "Frontend: Next.js",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend"
    },
    {
      "name": "Mobile: Flutter iOS Simulator",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "cwd": "${workspaceFolder}/mobile",
      "deviceId": "BD9ED303-1E76-4850-8B04-C3F2E1507CD9",
      "flutterMode": "debug",
      "args": []
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: Frontend + Backend",
      "configurations": [
        "Backend: ASP.NET Core",
        "Frontend: Next.js"
      ],
      "stopAll": true
    }
  ]
}
